<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.devMode" value="true" />

    <package name="default" extends="struts-default">
        <action name="hello" class="br.com.phellipe.action.HelloAction">
            <result name="success">/index.jsp</result>
        </action>
        
        <action name="cadastro-seguro" class="br.com.phellipe.action.CadastroSeguroAction">
            <result name="success">/seguros
            .jsp</result>
            <result name="error">/CreateSeguroForm.jsp</result> 
        </action>
        
        <action name="update-seguro" class="br.com.phellipe.action.CadastroSeguroAction">
            <result name="success">/seguros.jsp</result>
            <result name="error">/UpdateSeguroForm.jsp</result> 
        </action>
    </package>

</struts>