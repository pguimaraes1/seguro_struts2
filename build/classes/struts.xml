<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
	<constant name="struts.enable.DynamicMethodInvocation"
		value="false" />

    <constant name="struts.devMode" value="false" />
	<constant name="struts.custom.i18n.resources"
		value="ApplicationResources" />
    <package name="default" extends="struts-default" namespace="/">
    
        <action name="hello" class="br.com.phellipe.action.HelloAction">
            <result name="success">/index.jsp</result>
        </action>
        
        <action name="logar" class="br.com.phellipe.action.login.LoginAction">
            <result name="success">/home.jsp</result>
            <result name="error">/index.jsp</result> 
        </action>
        
        <action name="cadastroseguro" class="br.com.phellipe.action.seguro.SeguroAction">
            <result name="success" type="chain">listaseguros</result>
            <result name="error">/cadastraSeguro.jsp</result> 
        </action>
        
         <action name="loadseguro" class="br.com.phellipe.action.seguro.SeguroAction" method="find">
            <result name="success">update-seguro.jsp</result>
            <result name="error" type="redirectAction">listaseguros</result>
        </action>
        
        <action name="alteraseguro" class="br.com.phellipe.action.seguro.SeguroAction" method="update">
            <result name="success" type="chain">listaseguros</result>
            <result name="input">update-seguro.jsp</result>
        </action>
        
        <action name="excluirseguro" method="delete" class="br.com.phellipe.action.seguro.SeguroAction">
            <result name="success" type="chain">listaseguros</result>
            <result name="error" type="chain">listaseguros</result>
        </action>
       
        <action name="listaseguros" method="list" class="br.com.phellipe.action.seguro.SeguroAction">
            <result name="success">/seguros.jsp</result>
        </action>
                
        <action name="update-seguro" class="br.com.phellipe.action.seguro.SeguroAction">
            <result>/seguros.jsp</result>
        </action>
        
    </package>

</struts>